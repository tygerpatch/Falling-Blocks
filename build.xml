<?xml version="1.0"?>
<project name="Falling Blocks" default="run">
  
  <!-- javac -d classes FallingBlocks.java -->
  <target name="compile">
    <mkdir dir="./classes"/>
    <javac srcdir="." destdir="./classes" includeAntRuntime="false">
      <include name="src/FallingBlocks.java" />
    </javac>
  </target>
	
  <!-- java -classpath classes FallingBlocks -->
  <target name="run" depends="compile">    
    <java classname="src.FallingBlocks" classpath="./classes" fork="true" />  
  </target>

</project>

